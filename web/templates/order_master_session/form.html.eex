<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :user_id, "Order Master", class: "control-label" %>
    <%= select f, :user_id, @order_masters, class: "form-control", prompt: "Chosse an order master" %>
    <%= error_tag f, :user_id %>
  </div>

  <div class="form-group">
    <%= label f, :total_money, class: "control-label" %>
    <%= number_input f, :total_money, class: "form-control" %>
    <%= error_tag f, :total_money %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
